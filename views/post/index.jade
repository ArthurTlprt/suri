extends ../layout

block content
      h1 Bienvenue dans l'espace administrateur
      .row
        each post in posts
          .col-md-4.portfolio-item
            a(href='#')
              img.img-responsive(src =post.img, alt='')
            h3= post.title
            p= post.body
            a.btn.btn-default(type='button', href='/post/delete/' + post.id )
              span.glyphicon.glyphicon-trash(aria-hidden='true')
              |  Supprimer


  script(src='/javascripts/jquery.js')
// Bootstrap Core JavaScript
script(src='/javascripts/bootstrap.min.js')
