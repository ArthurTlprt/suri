extends ../layout

block content
  h1 Ajouter une nouvelle actualité!
    form(method="post", action='/member/add', enctype='multipart/form-data')
      .col-lg-6.text-center
        .form-group
            label(for='usr') Nom et prénom:
            input#usr.form-control(type='text', name='title')
        .form-group
            label(for='usr') Description:
            input#usr.form-control(type='text', name='legend')
      .col-lg-6.text-center
        .form-group
          label.control-label charger un
          br
          label.btn.btn-default.btn-file
            | fichier
            input(type='file', style='display: none;', name='img', accept='application/x-zip-compressed,image/*')
      .col-lg-12.text-center
        .form-group
          label(for='usr') Lien facebook:
          input#usr.form-control(type='text', name='facebook')
      .col-lg-12.text-center
        button.btn.btn-default(type='submit') Ajouter

